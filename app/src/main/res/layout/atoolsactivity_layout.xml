<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView style="@style/title_center_text"
        android:text="高级工具"/>
    <View style="@style/splitter_view"/>
    <TextView style="@style/content_text"
        android:id="@+id/tv_address_query"
        android:layout_width="match_parent"
        android:text="号码归属地查询"/>
    <View style="@style/dot_splitter_view"/>
    <TextView style="@style/content_text"
        android:id="@+id/tv_common_address"
        android:layout_width="match_parent"
        android:text="常用号码查询"/>
    <View style="@style/dot_splitter_view"/>
    <TextView style="@style/content_text"
        android:id="@+id/tv_app_locker"
        android:layout_width="match_parent"
        android:text="程序锁"/>
    <View style="@style/dot_splitter_view"/>
</LinearLayout>